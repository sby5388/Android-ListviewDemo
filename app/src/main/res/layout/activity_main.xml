<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_model_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_default" />

    <Button
        android:id="@+id/button_model_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_single" />


    <Button
        android:id="@+id/button_model_multiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_multiple" />

    <Button
        android:id="@+id/button_model_multiple_with_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_multiple_with_actionbar" />

</LinearLayout>